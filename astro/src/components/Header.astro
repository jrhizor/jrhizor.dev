---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <svg viewbox="0 0 64 64" style="width:4em; height: 4em;">
    <rect x="0" y="32" width="9.1" height="32" class="fill-blue-500"></rect>
    <rect x="18.2" y="0" width="9.1" height="64" class="fill-cyan-500"></rect>
    <rect x="36.4" y="0" width="9.1" height="64" class="fill-orange-500"></rect>
    <rect x="54.6" y="0" width="9.1" height="32" class="fill-red-500"></rect>
  </svg>

  <nav class="flex flex-col h-16 items-center">
    <h2 class="flex h-8 w-full items-center font-bold text-purple-800">
      <a href="/">Jared Rhizor</a>
    </h2>
    <div class="flex h-8 w-full internal-links gap-2">
      <HeaderLink href="/">About</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
      <HeaderLink href="/posts">Posts</HeaderLink>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0;
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
