---
import "@fontsource/open-sans";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import {
  FaGithub,
  FaLinkedin,
  FaTwitter,
  FaBluesky,
  FaRegEnvelope,
  FaBars,
} from "react-icons/fa6";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { Image } from 'astro:assets';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <div class="big-hug">
      <div class="grid-container">
        <div class="grid-item" id="sp1" aria-hidden="true"></div>

        <div class="grid-item" id="menu-container">
          <input type="checkbox" id="menu-btn" /><label
            id="menu-label"
            for="menu-btn"><div id="burger">MENU<FaBars /></div></label
          >

          <nav>
            <label id="menu-label2" for="menu-btn"
              ><div id="close-btn">
                <i class="fa-regular fa-xmark"></i>
              </div></label
            >

            <svg
              viewbox="0 0 100 100"
              style="width:75px; height: 75px; margin-bottom:5px"
            >
              <rect x="0" y="32" width="9.1" height="32" class="fill-blue-500"
              ></rect>
              <rect x="18.2" y="0" width="9.1" height="64" class="fill-cyan-500"
              ></rect>
              <rect
                x="36.4"
                y="0"
                width="9.1"
                height="64"
                class="fill-orange-500"></rect>
              <rect x="54.6" y="0" width="9.1" height="32" class="fill-red-500"
              ></rect>
            </svg>

            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/projects">Projects</a></li>
              <li><a href="/posts">Posts</a></li>
            </ul>

            <button id="theme-toggle" type="button">
              <span class="d-block-light d-none"
                ><i class="fa-light fa-space-station-moon-construction"></i>dark
                mode</span
              >
              <span class="d-block-dark d-none"
                ><i class="fa-light fa-sun-bright"></i>light mode</span
              >
            </button>
          </nav>
        </div>

        <div class="grid-item" id="extras-container">
          <div id="socials">
            <h3>Elsewhere</h3>
            <ul class="list-outside list-none">
              <li>
                <a
                  href="mailto:contact@jrhizor.dev"
                  class="flex items-center gap-2"
                  ><span class="text-[#e474a2]"><FaRegEnvelope /></span
                  >Email</a>
              </li>
              <li>
                <a
                  href="https://twitter.com/jaredrhizor"
                  class="flex items-center gap-2"
                  ><span class="text-[#1DA1F2]"><FaTwitter /></span>Twitter</a>
              </li>
              <li>
                <a
                  href="https://github.com/jrhizor"
                  class="flex items-center gap-2"
                  ><span class="text-[#2b3137]"><FaGithub /></span>GitHub</a>
              </li>
              <li>
                <a
                  href="https://www.linkedin.com/in/jrhizor"
                  class="flex items-center gap-2"
                  ><span class="text-[#0077b5]"><FaLinkedin /></span
                  >LinkedIn</a>
              </li>
              <li>
                <a
                  href="https://bsky.app/profile/jrhizor.dev"
                  class="flex items-center gap-2"
                  ><span class="text-[#0085ff]"><FaBluesky /></span>Bluesky</a>
              </li>
            </ul>
          </div>

          <p class="smaller">
            I'm <strong>Jared Rhizor</strong>, a maker, founder, and software
            dev.
          </p>
        </div>

        <div class="grid-item" id="content-container">
          <div class="grid grid-cols-3 py-12 gap-12">

            <div class="w-full h-full flex items-center">
              <Image src="/me.png" alt="Jared Rhizor" width="400" height="400" class="w-full" />
            </div>
            <div class="main text-4xl my-auto leading-snug pt-12 pb-6 col-span-2 text-balance">
              <p>Hello!</p>
              <p>I'm <strong>Jared Rhizor</strong>, a maker, founder, and software dev.</p>
              <p>Right now, I'm building <a href="https://www.keywordgems.com" class="underline-offset-1" style="font-weight: bold">KeywordGems</a> to make SEO keyword research easy.</p>
            </div>
          </div>

        </div>
        <div class="grid-item" id="sp2" aria-hidden="true"></div>
      </div>
    </div>
  </body>
</html>
